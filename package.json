{
  "name": "@bndynet/recharts-wrapper",
  "version": "1.0.0",
  "description": "A Recharts wrapper for easiler to use",
  "main": "lib/cjx/src/index",
  "typings": "lib/cjx/src/index.d.ts",
  "module": "lib/es6/src/index",
  "jsnext:main": "lib/es6/src/index",
  "scripts": {
    "dev": "npm run tslint && webpack --mode development",
    "dev:watch": "nodemon --exec 'npm run dev || exit 1'",
    "tslint": "tslint --project .",
    "build": "npm run clean && npm run tslint && tsc --outDir ./lib/cjs && tsc -m es6 --outDir ./lib/es6 && webpack --mode production",
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "clean": "shx rm -rf lib",
    "test": "jest"
  },
  "files": [
    "*.md",
    "lib"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testRegex": "^.+\\.spec\\.tsx?$"
  },
  "keywords": [
    "react",
    "reactjs",
    "chart",
    "react-component",
    "recharts"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@bndynet/header-injection-webpack-plugin": "^4.0.2",
    "@types/classnames": "^2.2.7",
    "@types/d3-shape": "^1.2.7",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.12",
    "@types/react": "^16.7.18",
    "@types/react-test-renderer": "^16.0.3",
    "@types/recharts": "file:typings/recharts",
    "@types/recharts-scale": "^1.0.0",
    "acorn": "^6.0.5",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "classnames": "^2.2.6",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint": "^5.9.0",
    "eslint-plugin-react": "^7.8.2",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-test-renderer": "^16.7.0",
    "recharts": "^1.4.2",
    "shx": "^0.3.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-loader": "^3.5.4",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1"
  },
  "peerDependencies": {
    "classnames": "^2.2.6",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "recharts": "^1.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  }
}
